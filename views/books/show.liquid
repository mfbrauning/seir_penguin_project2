{% layout "layout.liquid" %} 

{% block content %}

<div class="book">
    <div class="left">
    <h2>{{book.title}}</h2>
    <br>
    {{book.author}}
    <br>
     
    {{book.year}}
    <br>
    </div>
    <div class="middle">
    <img src="{{book.img}}" />
    <br>
   </div>
   <div class="right">
    <p>
    "{{book.review}}"
    <br>
    - {{book.reviewAuthor}}
</p>
</div>
</div>

<br>
<form action="/books/{{ book._id }}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
</form>

<br>
<a href="/books/{{book._id}}/edit"><button>Edit</button></a>
<br>
<a href="/books"><button>Back to Home Page</button></a>



{% endblock %}