{% layout "layout.liquid" %} 

{% block content %}

<div class="book">
    <h1>{{book.title}}</h1>
    <br>
    <img src="{{book.img}}" />
    <br>
    {{book.author}}
    <br>
    {{book.year}}
    <br>
    "{{book.review}}"
    <br>
    - {{book.reviewAuthor}}

<br>

<form action="/books/{{ book._id }}?_method=DELETE" method="POST">
    <input type="submit" value="Delete">
</form>
<br>
<a href="/books/{{book._id}}/edit"><button>Edit</button></a>
<br>
<a href="/books"><button>Back to Home Page</button></a>
</div>


{% endblock %}